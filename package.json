{
  "name": "innovation-sandbox-on-aws-deployer",
  "version": "1.0.0",
  "description": "AWS Lambda deployer that automatically deploys CloudFormation templates to Innovation Sandbox sub-accounts when leases are approved",
  "type": "module",
  "main": "dist/handler.js",
  "scripts": {
    "build": "esbuild src/handler.ts --bundle --platform=node --target=node22 --outdir=dist --format=cjs --external:@aws-sdk/*",
    "build:prod": "npm run build -- --minify && mkdir -p dist/templates && cp -r src/templates/* dist/templates/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run test"
  },
  "keywords": [
    "aws",
    "lambda",
    "cloudformation",
    "innovation-sandbox",
    "serverless"
  ],
  "author": "NDX Team (GDS)",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "typescript": "^5.3.2",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.972.0",
    "@aws-sdk/client-dynamodb": "^3.972.0",
    "@aws-sdk/client-eventbridge": "^3.972.0",
    "@aws-sdk/client-secrets-manager": "^3.972.0",
    "@aws-sdk/client-ssm": "^3.972.0",
    "@aws-sdk/client-sts": "^3.972.0",
    "@aws-sdk/lib-dynamodb": "^3.972.0",
    "js-yaml": "^4.1.1"
  }
}
